#include<stdio.h>
#include<stdlib.h>
#define MAX 5
int a[MAX],top=-1;
void push(int x){
    if(top==MAX-1)  printf("STACK OVERFLOW:");
    
    else  a[++top]=x;
}
void peak(){
   printf("peak is: %d\n",a[top]);
}
void pop(){
    if(top==-1)   printf("STACK UNDERFLOW:");
    else{
        int k=a[top];
        top--;
        printf("Element %d is eleminated\n",k);
    }
}
void display(){
    int i;
    if(top==-1)   printf("There are no elements to print");
    else{
        for(i=top;i>=0;i--)  printf("%d->%d\n",i+1,a[i]);
    }
}
void main(){
    int x,ch;
    while(1){
        printf("1:push\n2:pop\n3:peak\n4:display\n5:EXIT\n");
        scanf("%d",&ch);
        switch(ch){
            case 1:printf("Enter element to insert");
                   scanf("%d",&x);
                   push(x);
                   break;
            case 2:pop();
                   display();
                   break;
            case 3:peak();
                   display();
                   break;
            case 4:printf("the elements in stack are:\n");
                   display();
                   break;
            case 5:exit(0);
            default:printf("Enter correct choice:");
        }
    }
}


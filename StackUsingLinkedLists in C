#include<stdio.h>
#include<stdlib.h>
typedef struct stack_linked_list{
    int data;
    struct stack_linked_list *next;
}node;
node* top=NULL;
void push(int x){
    node *new=(node*)malloc(sizeof(node));
    new->data=x;
    new->next=NULL;
    if(top==NULL) top=new;
    else{
        new->next=top;
        top=new;
    }
}
void display(){
    node *temp=top;
    int i=1;
    while(temp!=NULL){
        printf("%d||-|%d|\n",i,temp->data);
        temp=temp->next;
        i++;
    }
}
void peak(){
    printf("PEAK->|%d|\n",top->data);
}
void pop(){
    node *temp=top;
    if(top==NULL)  printf("NO ELEMENTS TO PRINT\n");
    else{
        top=top->next;
        free(temp);
    }
}
int main(){
    int x,ch,l;
    while(1){
        printf("1:push\n2:pop\n3:peak\n4:display\n5:EXIT\n");
        scanf("%d",&ch);
        switch(ch){
            case 1:printf("Enter element to insert:\n");
                   scanf("%d",&x);
                   push(x);
                   break;
            case 2:pop();
                   display();
                   break;
            case 3:peak();
                   break;
            case 4:printf("The Elements in Stack are:\n");
                   display();
                   break;
            case 5:exit(0);
            default:printf("Enter Correct Choice:\n");
        }
    }
    return 0;
}
